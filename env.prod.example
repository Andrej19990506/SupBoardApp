# Продакшн переменные окружения для вашего домена

# Основные настройки
ENVIRONMENT=production
DOMAIN=yourdomain.com

# API URLs (замените на ваш домен)
API_BASE_URL=https://yourdomain.com/api
SOCKET_URL=wss://yourdomain.com
VITE_APP_API_URL=https://yourdomain.com/api
VITE_APP_WS_URL=wss://yourdomain.com/api/ws
ENV_TYPE=production

# Безопасность (ОБЯЗАТЕЛЬНО ЗАМЕНИТЕ НА СВОИ КЛЮЧИ!)
JWT_SECRET_KEY=your_production_jwt_secret_key_here_min_32_chars
POSTGRES_PASSWORD=your_very_secure_production_password_here

# База данных
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=appsubboard
POSTGRES_USER=postgres
PYTHONUNBUFFERED=1
PYTHONPATH=/app

# Telegram Bot (получите в @BotFather)
BOT_TOKEN=your_telegram_bot_token_here
WEBHOOK_PATH=/api/telegram/wh_production_random_string

# SMS.ru API (получите на sms.ru)
SMS_RU_API_ID=your_sms_api_id_here

# Google OAuth (получите в Google Console)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# VAPID keys for push notifications (сгенерируйте с помощью утилит)
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_CLAIMS_SUB=mailto:admin@yourdomain.com
APPLICATION_SERVER_KEY=your_application_server_key_here

# Healthcheck URLs (замените на ваш домен)
HEALTHCHECK_API_URL=https://yourdomain.com/api/health
HEALTHCHECK_BOT_URL=https://yourdomain.com/api/bot/health

# Debug режим
VITE_APP_DEBUG=false
REACT_APP_DEBUG=false

# Порты (внутренние)
BOT_PORT=8003
SERVER_PORT=8000
WEBSOCKET_PORT=8001
SCHEDULER_PORT=8002

# Nginx (замените на ваш домен)
NGINX_HOST=yourdomain.com
NGINX_PORT=80

# Разрешенные origins
ALLOWED_ORIGINS=*
TRUST_PROXY=true

# BOT API
BOT_API_URL=http://bot:8003

# Redis Configuration
REDIS_URL=redis://cache:6379 